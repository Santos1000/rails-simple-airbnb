<div class="container">
  <div class="row">
    <h1><%= @flat.name %></h1>
    <p><%= @flat.description %></p>

    <div class="flat-show-card">
      <h3>A bit more about this flat...</h3>
      <p><%= @flat.description %></p>
      <div class="map" style="background-image: url('https://maps.googleapis.com/maps/api/staticmap?center=<%= @flat.address %>&zoom=13&scale=2&size=1000x1000&maptype=roadmap&markers=color:red%7C<%= @flat.address %>&key=AIzaSyBtaHK-BLhBg7TruJu8iKk_wETqZMJM-GY')"></div>
    </div>

    <div class="flat-show-card">
      <div class="flex">
        <i class="fa fa-facebook-square fa-2x mr-2"></i>
        <i class="fa fa-twitter-square fa-2x mr-2"></i>
        <i class="fa fa-pinterest-square fa-2x mr-2"></i>
        <i class="fa fa-envelope-square fa-2x"></i>
      </div>
    </div>
  </div>
</div>
